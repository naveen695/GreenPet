  	<servlet-class>com.dgree.actions.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SignUpServlet</servlet-name>
  	<display-name>SignUpServlet</display-name>
  	<description></description>
  	<servlet-class>com.dgree.actions.SignUpServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>EmailVerification</servlet-name>
  	<display-name>EmailVerification</display-name>
