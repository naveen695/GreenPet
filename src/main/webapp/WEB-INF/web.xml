  </servlet>
  <servlet>
  	<servlet-name>UpdatePetDetails</servlet-name>
  	<display-name>UpdatePetDetails</display-name>
  	<description></description>
  	<servlet-class>com.dgree.actions.UpdatePetDetails</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UplodePetDetails</servlet-name>
  	<display-name>UplodePetDetails</display-name>
  	<description></description>
  	<servlet-class>com.dgree.actions.UplodePetDetails</servlet-class>
  </servlet>

  <servlet-mapping>
  	<servlet-name>Home</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
<servlet-mapping>
  	<servlet-name>contact</servlet-name>
  	<url-pattern>/contact</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>about</servlet-name>
  	<url-pattern>/about</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>index</servlet-name>
  	<url-pattern>/index</url-pattern>
  </servlet-mapping>
  

  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
