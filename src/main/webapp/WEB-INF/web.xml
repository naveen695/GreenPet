<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

  <display-name>Archetype Created Web Application</display-name>
  
  	<!-- data base configuration in context param -->
  	<context-param>
  	 	<param-name>environment</param-name>
  	 	<param-value>prod</param-value>
  	 	<description>environment name</description>
   </context-param>
   <context-param>
  	 	<param-name>dbURL</param-name>
   		<param-value>mongodb://treepet:treepet@ds131151.mlab.com:31151/dgree-treepet</param-value>
   		<description>environment url</description>
   </context-param>
    <context-param>
  	 	<param-name>dbName</param-name>
   		<param-value>gree-treepet</param-value>
   		<description>environment dbname</description>
   </context-param>
   
   
   
   
   
   
 <!--  <listener>
  	<listener-class>com.dgree.listener.DateBaseContextListener</listener-class>
  </listener -->
   <servlet>
  	<servlet-name>Home</servlet-name>
  	<jsp-file>/pages/home.jsp</jsp-file>
  </servlet>
  
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description></description>
  	<servlet-class>com.dgree.actions.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SignUpServlet</servlet-name>
  	<display-name>SignUpServlet</display-name>
  	<description></description>
  	<servlet-class>com.dgree.actions.SignUpServlet</servlet-class>
  </servlet>

  <servlet-mapping>
  	<servlet-name>Home</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SignUpServlet</servlet-name>
  	<url-pattern>/SignUpServlet</url-pattern>
  </servlet-mapping>
  
   <welcome-file-list>  
   <welcome-file>pages/index.jsp</welcome-file>  
  </welcome-file-list>  
</web-app>
